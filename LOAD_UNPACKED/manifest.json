{
  "manifest_version": 3,
  "name": "bplacer - forked by lllexxa",
  "version": "4.6",
  "description": "Automatically sends session and Turnstile tokens from bplace.org to a bplacer server.",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "alarms",
    "browsingData",
    "scripting"
  ],
  "host_permissions": [
    "https://bplace.org/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bplace.org/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://challenges.cloudflare.com/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "cf_turnstile_autoclick.js"
      ]
    },
    {
      "matches": [
        "*://challenges.cloudflare.com/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN",
      "js": [
        "cf_attach_shadow_open.js"
      ]
    }
  ]
}